<% if !@authorized_user%>
  <div class="login_signup_error">
    You are not authorized to view this page. Please log in as this user to view the page.
  </div>

  <div class="">
    <p><a href="/users/<%= @user.username %>">Click here</a> to return to your profile.</p>
  </div>
<% end %>


<% if @authorized_user%>

  <div class="">
    <h1><%= @user.first_name %>'s Workouts</h1>
  </div>

  <div class="">
    <h3>Hello <%= @user.first_name %>!</h3>
  </div>

  <div class="">
    <div class="">
      <h3>Your Workouts:</h3>
    </div>
    <div class="">
      <% if @user.workouts.count > 0 %>
        <ol>
          <% @user.workouts.each do |workout| %>
          <li>
            <%= workout.name %> <a href="/workouts/<%= workout.id %>">View</a> <a href="/workouts/<%= workout.id %>/edit">Edit</a>
          </li>
          <% end %>
        </ol>
      <% else %>
      <p>You have not created any workouts!</p>
      <% end %>
    </div>
  </div>
  <br>
  <div class="">
    <p><a href="/workouts/new">Click here</a> to create a new workout.</p>
    <p><a href="/exercises">Click here</a> to view all exercises.</p>
    <p><a href="/exercises/new">Click here</a> to create a new exercise.</p>
  </div>

<% end %>

<div class="">
  <p style="font-size: 80%">Currently logged in as <%= current_user.username %>. Not you? <a href="/logout">Log out</a>
</div>
