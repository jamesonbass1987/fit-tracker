<div class="">
  <h1>Edit Workout: <%= @workout.name %></h1>
</div>

<div class="">
  <form class="" action="/workouts/<%= @workout.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <h3>Name: <input type="text" name="name" value="<%= @workout.name %>"></h3><br>
    <h3>Description: <textarea name="workout_description" rows="4" cols="40"><%= @workout.description %></textarea></h3><br>
    <% @workout.exercises.each do |exercise| %>
      <div class="">
        <p><b>Exercise:</b> <%= exercise.name %></p>
        <p>Body Part: <%= exercise.body_part %></p>
        <p>Weight Type: <%= exercise.weight_type %></p>
        <div class="">
          <p><input type="checkbox" name="[exercise][current_exercises][]" value="<%= exercise.id %>">Remove</p>
        </div>
      </div>
    <% end %>
    <div class="">
      <h3>Add Exercises To Workout:</h3>
      <h4>Legs</h4>
      <br>
        <% @legs.each do |exercise| %>
          <div class="">
            <% if !@workout.exercises.include?(exercise) %>
              <div class="">
                <p>  <input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>">    <%= exercise.name %></p>
                <p><%= exercise.description %></p>
                <p>Weight Type: <%= exercise.weight_type %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      <h4>Chest</h4>
      <br>
        <% @chest.each do |exercise| %>
          <div class="">
            <% if !@workout.exercises.include?(exercise) %>
              <div class="">
                <input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>">    <%= exercise.name %></p>
                <p><%= exercise.description %></p>
                <p>Weight Type: <%= exercise.weight_type %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      <h4>Shoulders</h4>
      <br>
        <% @shoulders.each do |exercise| %>
          <div class="">
            <% if !@workout.exercises.include?(exercise) %>
              <div class="">
                <input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>">    <%= exercise.name %></p>
                <p><%= exercise.description %></p>
                <p>Weight Type: <%= exercise.weight_type %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      <h4>Arms</h4>
      <br>
        <% @arms.each do |exercise| %>
          <div class="">
            <% if !@workout.exercises.include?(exercise) %>
              <div class="">
                <input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>">    <%= exercise.name %></p>
                <p><%= exercise.description %></p>
                <p>Weight Type: <%= exercise.weight_type %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      <h4>Back</h4>
      <br>
        <% @back.each do |exercise| %>
          <div class="">
            <% if !@workout.exercises.include?(exercise) %>
              <div class="">
                <input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>">    <%= exercise.name %></p>
                <p><%= exercise.description %></p>
                <p>Weight Type: <%= exercise.weight_type %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      <h4>Abdominals</h4>
      <br>
        <% @abdominals.each do |exercise| %>
          <div class="">
            <% if !@workout.exercises.include?(exercise) %>
              <div class="">
                <input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>">    <%= exercise.name %></p>
                <p><%= exercise.description %></p>
                <p>Weight Type: <%= exercise.weight_type %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      <br>
    </div>
    <p>Don't see what you want? Create new exercises <a href="/exercises/new">here</a>.</p>
    <input type="submit" value="Save">
  </form>
  <br>
  <div class="">
    <form class="" action="/workouts/<%= @workout.id %>/delete" method="post">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete">
    </form>
  </div>
</div>

<div class="">
  <small>Currently logged in as <%= current_user.username %>. Not you? <a href="/logout">Log out</a>, or <a href="/users/<%= current_user.username %>">click here</a> to return to your profile.</small>
</div>
