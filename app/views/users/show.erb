<% if !@authorized_user%>
  <div class="login_signup_error">
    There was an error, or you are not authorized to view this page. Please log in as this user to view the page.
  </div>

  <div class="">
    <br>
    <p>Currently logged in as <%= current_user.username %>. Not you? <a href="/logout">Log out</a>, or <a href="/users/<%= current_user.username %>">click here</a> to return to your profile.</p>
  </div>
<% end %>


<% if @authorized_user%>
<div class="">
  <h1>User Page for <%= @user.username %></h1>
</div>

<div class="">
  <div class="">
    <h3>Your Workouts:</h3>
  </div>
  <div class="">
    <% if @user.workouts.count > 0 %>
      <% @user.workouts.each do |workout| %>
      <p><%= workout.name %> <a href="/workouts/show">View</a> <a href="/workouts/edit">Edit</a></p>
      <% end %>
    <% else %>
    <p>You have not created any workouts! <a href="/workouts/new">Click Here</a> to get started.</p>
    <% end %>
  </div>
</div>



<% end %>
