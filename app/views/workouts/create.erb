              </tr>
              <tr>
                <td style="text-align: center; vertical-align: middle;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>" class="checkbox-inline" style=""></td>
              </tr>
            </table>
          </label>
          <panel>
            <a href="/exercises/<%= exercise.id %>" target="_blank"><div class="panel-footer" style="text-align: center"><strong><%= exercise.name %></strong></div></a>
          </panel>
        </div>
      </div>
      <% end %>
    </div>
    <div class="container-fluid">
    <h4><strong>Shoulders<strong></h4>
      <% @shoulders.each do |exercise| %>
