          <p><input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>"><%= exercise.name %></p>
          <p><%= exercise.description %></p>
          <p>Weight Type: <%= exercise.weight_type %></p>
        </div>
      <% end %>
    <h4>Abdominals</h4>
    <br>
    <% @abdominals.each do |exercise| %>
      <div class="">
        <p><input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>"><%= exercise.name %></p>
        <p><%= exercise.description %></p>
        <p>Weight Type: <%= exercise.weight_type %></p>
      </div>
    <% end %>

    <br>

    <p>Don't see the one you are looking for? <a href="/exercises/new">Click here</a> to create a new exercise.</p>

    <input type="submit"value="Create">
  </form>
</div>
