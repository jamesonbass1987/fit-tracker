<% if @no_login_message && @no_login_message != ""%>
  <div class="login_signup_error">
    <%= @no_login_message %>
  </div>
<% end %>

<% if @login_error%>
  <div class="login_signup_error">
    <%= @login_error %>
  </div>
<% end %>

<h1>Login To FitTracker</h1>

<div class="">
  <form class="" action="/login" method="post">
    <p>Username: <input type="text" name="username"></p>
    <p>Password: <input type="password" name="password"></p>
    <input type="submit" value="Log In">
  </form>
</div>

<div style="margin-top: 20px">
  <p>Not a member of FitTracker? <a href="/signup">Sign Up.</a></p>
</div>
