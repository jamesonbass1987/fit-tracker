<div class="container">
  <h1><strong>Create Workout</strong></h1>

  <form action="/workouts" method="post">

    <div class="form-group">
      <label for="name">Workout Name:</label>
      <input type="text" class="form-control" name="name" required autofocus>
    </div>
    <div class="form-group">
      <label for="name">Description:</label>
      <textarea name="description" class="form-control"; rows="6" cols="50" required></textarea>
    </div>
    <h3><strong>Exercises:</strong></h3>
    <p>Select checkboxes to add exercise to workout. Click on exercise name for more info.</p>
    <div class="container-fluid">
      <h4><strong>Legs</strong></h4>
      <br>
      <% @legs.each do |exercise| %>
        <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 ">
          <div class="panel panel-default" style="position: relative;">
            <label class="checkbox-inline">
              <br>
              <table style="width:100%; position: relative; right: 4%">
                <tr style="line-height: 80%">
                  <th><p style=""><img src="/images/weightlifting-icon-legs.png" class="img-responsive center-block" style="width:40%;" alt=""></p></th>
                </tr>
                <tr>
                  <td style="text-align: center; vertical-align: middle;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>" class="checkbox-inline" style=""></td>
                </tr>
              </table>
            </label>
            <panel>
              <a href="/exercises/<%= exercise.id %>" target="_blank"><div class="panel-footer" style="text-align: center"><strong><%= exercise.name %></strong></div></a>
            </panel>
          </div>
        </div>
      <% end %>
    </div>
    <div class="container-fluid">
    <h4><strong>Chest</strong></h4>
    <br>
      <% @chest.each do |exercise| %>
