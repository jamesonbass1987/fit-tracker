<div class="container">
  <div class="">
    <h1><strong>Edit Workout:</strong> <%= @workout.name %></h1>
  </div>

  <form id="editForm" action="/workouts/<%= @workout.id %>" method="post">
    <input form= "editForm"id="hidden" type="hidden" name="_method" value="patch">
  </form>
  <form id="deleteForm" action="/workouts/<%= @workout.id %>/delete" method="post">
    <input form= "deleteForm"id="hidden" type="hidden" name="_method" value="delete">
  </form>

  <form class="" action="/workouts/<%= @workout.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" form="editForm" name="name" value="<%= @workout.name %>" required autofocus>
    </div>
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea name="description" class="form-control" form="editForm"; rows="6" cols="50" required><%= @workout.description %></textarea>
    </div>
    <div class="col-sm-12">
      <h3><strong>Current Exercises:</strong></h3>
      <% @workout.exercises.each do |exercise| %>
        <div class="col-sm-12 panel panel-default">
          <label class="checkbox-inline">
            <br>
            <p style=""><strong><%= exercise.name %></strong>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <strong>Body Part:</strong>&nbsp;<%= exercise.body_part %>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <strong>Weight Type:</strong>&nbsp;<%= exercise.weight_type %>
          </p>
            <p><strong>Description:&nbsp;</strong><%= exercise.description %></p>
            <p style="padding-left: 1.5em"><input type="checkbox" name="[exercise][current_exercises][]" value="<%= exercise.id %>" class="checkbox-inline" style="">Remove</p>
          </label>
        </div>
      <% end %>
    </div>
    <h3><strong>Exercises:</strong></h3>
    <div class="container-fluid">
      <h4><strong>Legs</strong></h4>
      <br>
      <% @legs.each do |exercise| %>
        <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
          <div class="panel panel-default" style="position: relative;">
            <label class="checkbox-inline">
              <table style="width:100%; position: relative; right: 4%">
                <tr style="line-height: 80%">
                  <th><p style=""><img src="/images/weightlifting-icon-legs.png" class="img-responsive center-block" style="width:40%;" alt=""></p></th>
                </tr>
                <tr>
                  <td style="text-align: center; vertical-align: middle;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>" class="checkbox-inline" style=""></td>
                </tr>
                <tr>
                  <td style="text-align: center; vertical-align: middle;"><p><strong><%= exercise.name %></strong></td></p>
                </tr>
              </table>
            </label>
          </div>
        </div>
      <% end %>
    </div>
    <br>
    <div class="col-lg-12">
    </div>
    <div class="container-fluid">
    <h4><strong>Chest</strong></h4>
    <br>
      <% @chest.each do |exercise| %>
      <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
        <div class="panel panel-default" style="position: relative;">
          <label class="checkbox-inline">
            <table style="width:100%">
              <tr style="line-height: 80%">
                <th><p style=""><img src="/images/weightlifting-icon-chest.png" class="img-responsive center-block" style="width: 40%" alt=""></p></th>
              </tr>
              <tr>
                <td style="text-align: center; vertical-align: middle;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>" class="checkbox-inline" style=""></td>
              </tr>
              <tr>
                <td style="text-align: center; vertical-align: middle;"><p><strong><%= exercise.name %></strong></td></p>
              </tr>
            </table>
          </label>
        </div>
      </div>
      <% end %>
    </div>
    <br>
    <div class="col-lg-12">
    </div>
    <div class="container-fluid">
    <h4><strong>Shoulders<strong></h4>
    <br>
      <% @shoulders.each do |exercise| %>
      <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
        <div class="panel panel-default" style="position: relative;">
          <label class="checkbox-inline">
            <table style="width:100%">
              <tr style="line-height: 80%">
                <th><p style=""><img src="/images/weightlifting-icon-shoulders.png" class="img-responsive center-block" style="width:45%;" alt=""></p></th>
              </tr>
              <tr>
                <td style="text-align: center; vertical-align: middle;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>" class="checkbox-inline" style=""></td>
              </tr>
              <tr>
                <td style="text-align: center; vertical-align: middle;"><p><strong><%= exercise.name %></strong></td></p>
              </tr>
            </table>
          </label>
        </div>
      </div>
      <% end %>
    </div>
    <br>
    <div class="col-lg-12">
    </div>
    <div class="container-fluid">
    <h4><strong>Arms<strong></h4>
    <br>
      <% @arms.each do |exercise| %>
