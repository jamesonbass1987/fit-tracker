<div class="container">
  <h1><strong>Create Workout</strong></h1>

  <form action="/workouts" method="post">

    <div class="form-group">
      <label for="name">Workout Name:</label>
      <input type="text" class="form-control" name="name" required autofocus>
    </div>
    <div class="form-group">
      <label for="name">Description:</label>
      <textarea name="description" class="form-control"; rows="6" cols="50" required></textarea>
    </div>
    <h3><strong>Exercises:</strong></h3>
    <div class="col-md-12">
      <h4><strong>Legs</strong></h4>
      <br>
      <% @legs.each do |exercise| %>
        <div class="col-md-3 panel panel-default">
          <label class="checkbox-inline">
            <br>
            <img src="/images/weightlifting-icon-legs.png" class="img-responsive center-block" style="width:40%; vertical-align: middle; position: relative; right: 8%" alt="">
            <p style="text-align: center; vertical-align: middle"><input type="checkbox" name="exercise[id][]" value="<%= exercise.id %>" class="checkbox-inline" style=""></p>
            <br>
            <p style="text-align: center; position: relative; right: 8%"><strong><%= exercise.name %></strong></p>
          </label>
        </div>
      <% end %>
    </div>
    <div class="col-md-12">
    <h4><strong>Chest</strong></h4>
